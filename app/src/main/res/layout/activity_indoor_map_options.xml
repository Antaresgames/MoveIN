<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shoaib.gmaptest1.IndoorMapOptions"
    android:background="#ffffff">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginBottom="84dp"
        android:numStars="6"
        android:rating="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FAST NU"
        android:id="@+id/textView_buildingname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textColor="#4c9dff"
        android:textStyle="normal|bold"
        android:typeface="monospace" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="View"
        android:id="@+id/button_view"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/textView_buildingname"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar"
        android:layout_toLeftOf="@+id/textView_buildingname"
        android:layout_toStartOf="@+id/textView_buildingname"
        android:background="#dc3453dc"
        android:textColor="#ffffff"
        android:typeface="monospace"
        android:onClick="gotooutdoormap" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Design"
        android:id="@+id/button_design"
        android:layout_alignTop="@+id/button_view"
        android:layout_alignRight="@+id/ratingBar"
        android:layout_alignEnd="@+id/ratingBar"
        android:layout_alignBottom="@+id/button_view"
        android:background="#dc3453dc"
        android:textColor="#ffffff"
        android:typeface="monospace"
        android:onClick="gotooutdoormap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rate Map"
        android:id="@+id/textView_ratemap"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button_design"
        android:layout_toStartOf="@+id/button_design"
        android:layout_marginBottom="43dp"
        android:singleLine="false"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:typeface="monospace" />

</RelativeLayout>
